{
  "name": "drykorn-vertragsmanagement",
  "version": "1.0.0",
  "private": true,
  "description": "Sicherheitskritisches Vertragsmanagement-System fÃ¼r Drykorn",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "npm run dev -w apps/web",
    "dev:api": "npm run dev -w apps/api",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "build": "npm run build -w apps/web && npm run build -w apps/api",
    "build:web": "npm run build -w apps/web",
    "build:api": "npm run build -w apps/api",
    "start": "npm run start -w apps/web",
    "start:api": "npm run start:prod -w apps/api",
    "lint": "npm run lint -w apps/web && npm run lint -w apps/api",
    "test": "npm run test -w apps/api",
    "test:e2e": "npm run test:e2e -w apps/api",
    "db:generate": "npm run prisma:generate -w apps/api",
    "db:migrate": "npm run prisma:migrate -w apps/api",
    "db:push": "npm run prisma:push -w apps/api",
    "db:seed": "npm run prisma:seed -w apps/api",
    "db:studio": "npm run prisma:studio -w apps/api",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
